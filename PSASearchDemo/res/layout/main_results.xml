<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/results_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".MainActivity$ResultSectionFragment" >


	<TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/result_status"
        android:textSize="@dimen/result_notfound"
        android:gravity="center"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/results_view"
        android:orientation="vertical"
   		android:keepScreenOn="true"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
        android:background="@color/result_background"
        android:padding="@dimen/resultview_padding">
        <!--
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Certifcation #"
            android:textStyle="bold"
            android:textColor="@color/result_label_text"
            android:gravity="center"
            android:textSize="@dimen/result_cert_label"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_certno"
            android:textColor="@color/result_text"
            android:gravity="center"
            android:textSize="@dimen/result_cert_value"/>-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_yearbrand"
            android:textColor="@color/result_text"
            android:gravity="center"
            android:textSize="@dimen/result_yearbrand_value"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_variety"
            android:gravity="center"
            android:textSize="@dimen/result_variety_value"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cardno"
            android:gravity="center"
            android:textSize="@dimen/result_cardno_value"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_player"
            android:gravity="center"
            android:textSize="@dimen/result_player_value"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grade"
            android:textStyle="bold"
            android:textSize="@dimen/result_grade_label"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/result_background" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_grade"
            android:layout_gravity="center"
            android:textSize="@dimen/result_grade_value"
            android:textStyle="bold"
            android:background="@drawable/roundedbluebox"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="2dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Population"
            android:textStyle="bold"
            android:textColor="@color/result_label_text"
            android:gravity="center"
            android:textSize="@dimen/result_pop_label"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/result_pop_layout_height">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/result_roundedbox_margin"
                android:background="@drawable/roundedbluebox">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Same Grade"
                    android:textColor="@color/result_label_text"
                    android:gravity="center"
                    android:textSize="@dimen/result_pop_label"
                    android:background="@color/result_popsublabel"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:id="@+id/tv_pop"
                    android:gravity="center"
                    android:textSize="@dimen/result_pop_value"
                    android:textStyle="bold"
                    android:background="@color/result_popsubvalue"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/result_roundedbox_margin"
                android:background="@drawable/roundedbluebox">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="w/Qualifier"
                    android:textColor="@color/result_label_text"
                    android:gravity="center"
                    android:textSize="@dimen/result_pop_label"
                    android:background="@color/result_popsublabel"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:id="@+id/tv_qualpop"
                    android:gravity="center"
                    android:textSize="@dimen/result_pop_value"
                    android:textStyle="bold"
                    android:background="@color/result_popsubvalue"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/result_roundedbox_margin"
                android:background="@drawable/roundedbluebox">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Higher"
                    android:textColor="@color/result_label_text"
                    android:gravity="center"
                    android:textSize="@dimen/result_pop_label"
                    android:background="@color/result_popsublabel"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:id="@+id/tv_higherpop"
                    android:gravity="center"
                    android:textSize="@dimen/result_pop_value"
                    android:textStyle="bold"
                    android:background="@color/result_popsubvalue"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/priceLink"
            android:text="Check current prices"
            android:textColor="@color/result_label_text"
            android:gravity="center"
            android:textSize="@dimen/result_searchlink"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</LinearLayout>